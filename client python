import socket

clientsocket = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
clientsocket.connect(('localhost', 8090))
print "connected"
while 1:
    a=raw_input("enter text")
    size=str(len(a))
    for i in xrange(4-len(size)):
        size="0"+size    
    a=size+a
    print a
    clientsocket.send(a)
    
